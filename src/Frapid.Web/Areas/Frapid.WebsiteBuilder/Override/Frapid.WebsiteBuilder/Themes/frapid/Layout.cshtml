<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <link href="/my/template/css/semantic-ui/semantic.min.css" rel="stylesheet">
    <script src="/my/template/scripts/jquery-2.1.4.js"></script>
    <script src="/my/template/css/semantic-ui/semantic.min.js"></script>
    <link href="/my/template/css/site.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Pontano+Sans' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Josefin+Sans' rel='stylesheet' type='text/css'>
    <style>
        html, body{
            font-size:16px;
        }
    </style>
</head>
<body id="body">
    @{
        string header = ViewBag.LayoutPath + "Header.cshtml";
        string footer = ViewBag.LayoutPath + "Footer.cshtml";
    }

    @Html.Partial(header)

    <section class="body">
        <div class="ui attached padded segment">
            <div class="ui container">
                @RenderBody()
            </div>
        </div>
    </section>
    
    @Html.Partial(footer)
</body>
</html>