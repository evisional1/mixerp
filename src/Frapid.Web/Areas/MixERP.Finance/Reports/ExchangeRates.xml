<?xml version="1.0" encoding="utf-8" ?>
<FrapidReport>
  <Header />
  <Title>Exchange Rates</Title>
  <TopSection>
    <table class="table horizontal">
      <tr>
        <td>{i18n.OfficeCode}</td>
        <td>{DataSource[0].office_code}</td>
      </tr>
      <tr>
        <td>{i18n.OfficeName}</td>
        <td>{DataSource[0].office_name}</td>
      </tr>
      <tr>
        <td>{i18n.BaseCurrency}</td>
        <td>{DataSource[0].currency_code}</td>
      </tr>
      <tr>
        <td>{i18n.UpdatedOn}</td>
        <td>{DataSource[0].updated_on}</td>
      </tr>
    </table>
    <br />
  </TopSection>
  <Body>
    <Content>
      <h2>{DataSource[0].currency_code}</h2>
    </Content>
    <GridViews>
      <GridView>
        <GridViewDataSource Index="1" Style="white-space:nowrap;">
        </GridViewDataSource>
      </GridView>
    </GridViews>
  </Body>
  <BottomSection>
  </BottomSection>
  <DataSources>
    <DataSource>
      <Query>
        SELECT *
        FROM finance.exchange_rates
        INNER JOIN core.offices
        ON finance.exchange_rates.office_id = core.offices.office_id
        WHERE finance.exchange_rates.office_id = @OfficeId
        AND status
        ORDER BY updated_on DESC, exchange_rate_id DESC
        LIMIT 1;
      </Query>
      <Parameters>
        <Parameter Name="@OfficeId" FieldLabel="Office Id" Type="int"  DefaultValue="{Meta.OfficeId}" />		
      </Parameters>
    </DataSource>
    <DataSource>
      <Query>
        SELECT foreign_currency_code, exchange_rate
        FROM finance.exchange_rate_details
        WHERE exchange_rate_id =
        (
        SELECT exchange_rate_id
        FROM finance.exchange_rates
        WHERE office_id = @OfficeId
        AND status
        ORDER BY updated_on DESC, exchange_rate_id DESC
        LIMIT 1
        );
      </Query>
	  <Formatting>
		<Field Name="exchange_rate" FormatExpression="N4" />
	  </Formatting>
      <Parameters>
        <Parameter Name="@OfficeId" FieldLabel="Office Id" Type="int"  DefaultValue="{Meta.OfficeId}" />
      </Parameters>
    </DataSource>
  </DataSources>
</FrapidReport>